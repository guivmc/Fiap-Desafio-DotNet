@model FiapTestWeb.Models.TurmaModel

<div class="text-center">
    <h1 class="display-4">Editar Turma</h1>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditarTurma" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="CursoID" class="control-label"></label>
                <input asp-for="CursoID" class="form-control" type="number" />
                <span asp-validation-for="CursoID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Turma" class="control-label"></label>
                <input asp-for="Turma" class="form-control" />
                <span asp-validation-for="Turma" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ano" class="control-label"></label>
                <input asp-for="Ano" class="form-control" type="number" />
                <span asp-validation-for="Ano" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<hr />
<div>
    <a class="btn btn-primary" href="@Url.Action("DeltarTurmaAsync", "Turma", new{ id =  Model.ID})">Deletar</a>
</div>